<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_distanceList_topParent"
        style="@style/Guideline.DistanceList.TopParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_distanceList_bottomParent"
        style="@style/Guideline.DistanceList.BottomParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_distanceList_leftParent"
        style="@style/Guideline.DistanceList.LeftParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_distanceList_rightParent"
        style="@style/Guideline.DistanceList.RightParent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_distanceList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_distanceList_bottomParent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_distanceList_rightParent"
        app:layout_constraintStart_toStartOf="@+id/guideline_distanceList_leftParent"
        app:layout_constraintTop_toTopOf="@+id/guideline_distanceList_topParent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>