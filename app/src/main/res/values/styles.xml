<?xml version="1.0" encoding="utf-8"?>
<resources>

    //---------------------->all
    <style name="WidthHeight.All.BothMatchParent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidthHeight.All.BothWrapContent" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthHeight.All.MatchParentWrapContent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthHeight.All.BothZero" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Guideline.All.Horizontal" parent="WidthHeight.All.BothWrapContent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Guideline.All.Vertical" parent="WidthHeight.All.BothWrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    //---------------------->default
    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="startIconDrawable">@drawable/ic_expand_more</item>
    </style>

    <style name="BaseBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveItemBottomNavigationTextAppearance</item>
        <item name="itemIconSize">@dimen/itemIconSize_BaseBottomNavigationView</item>
        <item name="itemPaddingBottom">@dimen/itemPaddingBottom_BaseBottomNavigationView</item>
    </style>
    
    <style name="ActiveItemBottomNavigationTextAppearance" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/primary_extra_bold</item>
        <item name="android:fontFamily">@font/primary_extra_bold</item>
    </style>

    //---------------------->activity_main.xml
    <style name="Guideline.Main.TopParent" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.04</item>
    </style>

    <style name="Guideline.Main.BottomParent" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.88</item>
    </style>

    <style name="Guideline.Main.LeftParent" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.03</item>
    </style>

    <style name="Guideline.Main.RightParent" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.97</item>
    </style>

    <style name="Guideline.Main.BottomNavigationView" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.91</item>
    </style>

    <style name="FragmentContainer.Main" parent="WidthHeight.All.BothMatchParent">
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
        <item name="defaultNavHost">true</item>
        <item name="navGraph">@navigation/nav_graph</item>
    </style>

    <style name="BottomNavigationView.Main" parent="WidthHeight.All.BothZero">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">@+id/guideline_main_bottomNavigationView</item>
        <item name="menu">@menu/main_navigation</item>
    </style>

    //---------------------->fragment_main.xml
    <style name="Guideline.Main.TopBeginning" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.07</item>
    </style>

    <style name="Guideline.Main.BottomBeginning" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.16</item>
    </style>

    <style name="Guideline.Main.TopDestination" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.21</item>
    </style>

    <style name="Guideline.Main.BottomDestination" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.30</item>
    </style>

    <style name="Guideline.Main.TopDistanceCalculate" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.39</item>
    </style>

    <style name="Guideline.Main.BottomDistanceCalculate" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.49</item>
    </style>

    <style name="Guideline.Main.LeftDistanceCalculate" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.30</item>
    </style>

    <style name="Guideline.Main.RightDistanceCalculate" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.70</item>
    </style>

    <style name="Guideline.Main.TopDistanceShow" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.57</item>
    </style>

    <style name="Guideline.Main.BottomDistanceShow" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.64</item>
    </style>

    <style name="TextInputLayout.Main.All" parent="WidthHeight.All.BothZero">
        <item name="layout_constraintStart_toStartOf">@id/guideline_main_leftParent</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_main_rightParent</item>
    </style>

    <style name="TextInputLayout.Main.Beginning" parent="TextInputLayout.Main.All">
        <item name="layout_constraintTop_toTopOf">@id/guideline_main_topBeginning</item>
        <item name="layout_constraintBottom_toBottomOf">@id/guideline_main_bottomBeginning</item>
    </style>

    <style name="TextInputLayout.Main.Destination" parent="TextInputLayout.Main.All">
        <item name="layout_constraintTop_toTopOf">@id/guideline_main_topDestination</item>
        <item name="layout_constraintBottom_toBottomOf">@id/guideline_main_bottomDestination</item>
    </style>

    <style name="TextInputEditText.Main.All" parent="WidthHeight.All.BothMatchParent">
        <item name="android:textAppearance">?textAppearanceHeadline1</item>
        <item name="android:textColor">@null</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextInputEditText.Main.Beginning" parent="TextInputEditText.Main.All">
        <item name="android:hint">مبدأ</item>
    </style>

    <style name="TextInputEditText.Main.Destination" parent="TextInputEditText.Main.All">
        <item name="android:hint">مقصد</item>
    </style>

    <style name="Button.Main.DistanceCalculate" parent="WidthHeight.All.BothZero">
        <item name="android:text">محاسبه مسافت</item>
        <item name="android:textAppearance">?textAppearanceHeadline1</item>
        <item name="layout_constraintStart_toStartOf">@id/guideline_main_leftDistanceCalculate</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_main_rightDistanceCalculate</item>
        <item name="layout_constraintTop_toTopOf">@id/guideline_main_topDistanceCalculate</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/guideline_main_bottomDistanceCalculate</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextView.Main.DistanceShow" parent="WidthHeight.All.BothZero">
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="layout_constraintStart_toStartOf">@id/guideline_main_leftParent</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_main_rightParent</item>
        <item name="layout_constraintTop_toTopOf">@id/guideline_main_topDistanceShow</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/guideline_main_bottomDistanceShow</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProgressBar.Main.DistanceShow" parent="WidthHeight.All.BothZero">
        <item name="layout_constraintStart_toStartOf">@id/guideline_main_leftParent</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_main_rightParent</item>
        <item name="layout_constraintTop_toTopOf">@id/guideline_main_topDistanceShow</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/guideline_main_bottomDistanceShow</item>
        <item name="android:visibility">invisible</item>
    </style>

    //---------------------->fragment_distance_list.xml
    <style name="Guideline.DistanceList.TopParent" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.02</item>
    </style>

    <style name="Guideline.DistanceList.BottomParent" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.98</item>
    </style>

    <style name="Guideline.DistanceList.LeftParent" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.03</item>
    </style>

    <style name="Guideline.DistanceList.RightParent" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.97</item>
    </style>

    //---------------------->item_distance_list.xml
    <style name="Guideline.ItemDistanceList.TopParent" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.07</item>
    </style>

    <style name="Guideline.ItemDistanceList.BottomParent" parent="Guideline.All.Horizontal">
        <item name="layout_constraintGuide_percent">0.90</item>
    </style>

    <style name="Guideline.ItemDistanceList.LeftParent" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.08</item>
    </style>

    <style name="Guideline.ItemDistanceList.RightParent" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.92</item>
    </style>

    <style name="Guideline.ItemDistanceList.DestinationItemsRightSide" parent="Guideline.All.Vertical">
        <item name="layout_constraintGuide_percent">0.58</item>
    </style>

    <style name="TextView.ItemDistanceList.AllText" parent="WidthHeight.All.BothWrapContent">
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="TextView.ItemDistanceList.BeginningText" parent="TextView.ItemDistanceList.AllText">
        <item name="layout_constraintEnd_toEndOf">@+id/guideline_itemDistanceList_endParent</item>
        <item name="layout_constraintTop_toTopOf">@+id/guideline_itemDistanceList_topParent</item>
        <item name="android:text">مبدا</item>
    </style>

    <style name="TextView.ItemDistanceList.DestinationText" parent="TextView.ItemDistanceList.AllText">
        <item name="layout_constraintEnd_toEndOf">@id/guideline_itemDistanceList_destinationItemsRightSide</item>
        <item name="layout_constraintTop_toTopOf">@+id/guideline_itemDistanceList_topParent</item>
        <item name="android:text">مقصد</item>
    </style>

    <style name="TextView.ItemDistanceList.All" parent="WidthHeight.All.BothWrapContent">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

    <style name="TextView.ItemDistanceList.Beginning" parent="TextView.ItemDistanceList.All">
        <item name="layout_constraintEnd_toEndOf">@+id/guideline_itemDistanceList_endParent</item>
        <item name="layout_constraintTop_toBottomOf">@+id/textView_itemDistanceList_beginningText</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/guideline_itemDistanceList_bottomParent</item>
    </style>

    <style name="TextView.ItemDistanceList.Destination" parent="TextView.ItemDistanceList.All">
        <item name="layout_constraintEnd_toEndOf">@id/guideline_itemDistanceList_destinationItemsRightSide</item>
        <item name="layout_constraintTop_toBottomOf">@+id/textView_itemDistanceList_destinationText</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/guideline_itemDistanceList_bottomParent</item>
    </style>

    <style name="TextView.ItemDistanceList.Distance" parent="WidthHeight.All.BothWrapContent">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="layout_constraintStart_toStartOf">@+id/guideline_itemDistanceList_startParent</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/guideline_itemDistanceList_bottomParent</item>
    </style>

    <style name="ConstraintLayout.ItemDistanceList" parent="WidthHeight.All.MatchParentWrapContent">
        <item name="android:background">@drawable/background_item_distance_list</item>
    </style>
</resources>