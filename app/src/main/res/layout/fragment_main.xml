<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WidthHeight.All.BothMatchParent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_topParent"
        style="@style/Guideline.All.TopParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_bottomParent"
        style="@style/Guideline.All.BottomParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_leftParent"
        style="@style/Guideline.All.LeftParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_rightParent"
        style="@style/Guideline.All.RightParent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_topBeginning"
        style="@style/Guideline.Main.TopBeginning" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_bottomBeginning"
        style="@style/Guideline.Main.BottomBeginning" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_topDestination"
        style="@style/Guideline.Main.TopDestination" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_bottomDestination"
        style="@style/Guideline.Main.BottomDestination" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_topDistanceCalculate"
        style="@style/Guideline.Main.TopDistanceCalculate" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_bottomDistanceCalculate"
        style="@style/Guideline.Main.BottomDistanceCalculate" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_rightDistanceCalculate"
        style="@style/Guideline.Main.RightDistanceCalculate" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_leftDistanceCalculate"
        style="@style/Guideline.Main.LeftDistanceCalculate" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_topDistanceShow"
        style="@style/Guideline.Main.TopDistanceShow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_bottomDistanceShow"
        style="@style/Guideline.Main.BottomDistanceShow" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_main_beginning"
        style="@style/TextInputLayout.Main.Beginning">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_main_beginning"
            style="@style/TextInputEditText.Main.Beginning"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_main_destination"
        style="@style/TextInputLayout.Main.Destination">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText_main_destination"
            style="@style/TextInputEditText.Main.Destination" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_main_distanceCalculate"
        style="@style/Button.Main.DistanceCalculate" />

    <TextView
        android:id="@+id/textView_main_distanceShow"
        style="@style/TextView.Main.DistanceShow" />

    <ProgressBar
        android:id="@+id/progressBar_main_distanceShow"
        style="@style/ProgressBar.Main.DistanceShow" />

</androidx.constraintlayout.widget.ConstraintLayout>